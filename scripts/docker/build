#!/usr/bin/env bash -e

APP_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && cd .. && pwd )/"
source "$APP_HOME/scripts/.functions.sh"

sbt_build_docker_image() {
    check_dependency_docker

    cd $APP_HOME
    chmod +x sbt
    ./sbt docker:publishLocal
}

sbt_build_docker_image

set +e
